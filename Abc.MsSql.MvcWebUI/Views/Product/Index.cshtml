@model Abc.MsSql.MvcWebUI.Moddels.ProductListViewModel

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10">
    <table class="table">
        <tr>
            <td>Id</td>
            <td>Product Name</td>
            <td>CategoryId</td>
            <td>Price</td>
            <td>Stok</td>
            <td></td>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.CategoryId</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitStok</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.Id"> add to cart</a></td>
            </tr>
        }
    </table>
</div>

<product-list-pager page-size="@Model.PageSize"
                    page-count="@Model.PageCount"
                    current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage">
</product-list-pager>